<core:FragmentDefinition height="100%" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core"
    xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:card="sap.f.cards" xmlns:form="sap.ui.layout.form" xmlns:f="sap.f"   xmlns:l="sap.ui.layout">
  
    <Page showHeader="false" id="tablePage" class='sapUiContentPadding' backgroundDesign="List" >
		<Table id="payments-table"
       inset="false"
       items="{
            path: '/TableEntity'
        }">
    <headerToolbar>
        <OverflowToolbar>
            <content>
                <Title text="Payments" level="H2"/>
                <ToolbarSpacer/>
                <Label visible="false" text="Transaction date" labelFor="dynamic-range"/>
                <DynamicDateRange
                    id="dynamicRange"
                    change="onChange"
                    width="{env>/filterInputWidth}"/>
            </content>
        </OverflowToolbar>
    </headerToolbar>
    <infoToolbar>
        <OverflowToolbar>
            <Label text="List of payments"/>
        </OverflowToolbar>
    </infoToolbar>
    <columns>
        <Column>
            <Text text="Transaction date" />
        </Column>
        <Column hAlign="Center">
            <Text text="Transaction type" />
        </Column>
        <Column hAlign="End">
            <Text text="Amount" />
        </Column>
    </columns>
    <items>
        <ColumnListItem>
            <cells>
                <Text text="{ path: 'PerfomDateTime', formatter: '._dateFormatter'}" />
                <Text text="{TransactionType}" />
                <ObjectNumber
                    number="{
                        parts:[{path:'Amount'},{path:'CurrencyCode'}],
                        type: 'sap.ui.model.type.Currency',
                        formatOptions: {showMeasure: false}
                    }"
                    unit="{CurrencyCode}" />
            </cells>
        </ColumnListItem>
    </items>
</Table>

	</Page>
</core:FragmentDefinition>
