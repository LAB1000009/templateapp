<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:card="sap.f.cards" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:table="sap.ui.table" xmlns:tnt="sap.tnt" height="100%" displayBlock="true">
   <Panel height="100%" id="tablePage" class="sapUiContentPadding" backgroundDesign="List" headerText="{i18n&gt;TableTab_Title}">
      <Panel headerText="Grid Table" expanded="true" expandable="true">
       
         <smartTable:SmartTable requestAtLeastFields="ExitDate" entitySet="TableEntity" smartFilterId="smartFilterBar" useExportToExcel="true" beforeExport="onBeforeExport" useVariantManagement="true" useTablePersonalisation="true"  showRowCount="false" persistencyKey="SmartTableRefApp_Explored" enableAutoBinding="true" class="sapUiResponsiveContentPadding" enableAutoColumnWidth="true">
            <table:Table id="ui-table" rows="{path: '/TableEntity'}" visibleRowCount="10" selectionMode="MultiToggle" enableSelectAll="true">
              
            </table:Table>
         </smartTable:SmartTable>
      </Panel>
      <Panel headerText="Responsive Table" expanded="false" expandable="true">
         <Table id="payments-table" inset="false" items="{path: '/TableEntity'}">
            <columns>
               <Column>
                  <Text text="Name" />
               </Column>
               <Column hAlign="Center">
                  <Text text="Job" />
               </Column>
               <Column hAlign="End">
                  <Text text="Department" />
               </Column>
               <Column hAlign="End">
                  <Text text="BusinessUnit" />
               </Column>
               <Column hAlign="End">
                  <Text text="Hire Date" />
               </Column>
               <Column hAlign="End">
                  <Text text="Annual Salary" />
               </Column>
            </columns>
            <items>
               <ColumnListItem key="{EEID}">
                  <cells>
                     <Text text="{FullName}" />
                     <Text text="{JobTitle}" />
                     <Text text="{Department}" />
                     <Text text="{BusinessUnit}" />
                     <Text text="{ path: 'HireDate', formatter: '_dateFormatter'}" />
                     <ObjectNumber number="{parts:[{path:'AnnualSalary'},{path:'CurrencyCode'}],type: 'sap.ui.model.type.Currency',                         formatOptions: {showMeasure: false}                     }" unit="{CurrencyCode}" />
                  </cells>
               </ColumnListItem>
            </items>
         </Table>
      </Panel>
   </Panel>
</core:FragmentDefinition>