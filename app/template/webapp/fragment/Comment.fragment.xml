<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
    <Page title="Comments" id="commentPage" backgroundDesign="List">
        <List
            items="{/CommentEntity}" >
            <FeedListItem
                    sender="{Author}"
                    icon="{AuthorPicUrl}"
                    iconDensityAware="false"
                    info="{Type}"
                    timestamp="{Date}"
                    text="{Text}" />
        </List>
        <FeedInput
                showIcon="true"
                icon="http://upload.wikimedia.org/wikipedia/commons/2/25/George_Washington_as_CIC_of_the_Continental_Army_bust.jpg" />
    </Page>
</core:FragmentDefinition>
