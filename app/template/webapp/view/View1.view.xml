	<semantic:SemanticPage
		class="sapUiNoContentPadding"
		id="plannerSemanticPage" >
        <semantic:titleExpandedContent class="sapUiContentPadding">
         <HBox width="100%" alignItems="Center" height="50px">
            <VBox width="50%">
                <HBox width="100%">
                    <Title text="{treeModel>/headerTitle}"/>
                </HBox>
                <Label text="{treeModel>/headerSubTitle}"/>
            </VBox>
            <HBox width="50%" justifyContent="SpaceBetween" alignItems="Center" renderType="Bare">
                
                    <Title text="{treeModel>/headerActDate}"/>
                    
                    <Title text="{treeModel>/headerCurrUser}"/>
                
                    <Image src="../logo/mosec_logo.png" height="50px"/>
                    <!-- <Title text="Icon"/> -->
            </HBox>
        </HBox>
        </semantic:titleExpandedContent>
        <Page showHeader="true" class="sapUiContentPadding">
            <customHeader>
                <Toolbar width="100%">
                    <Breadcrumbs currentLocationText="Laptop" separatorStyle="{/selected}" class="sapUiMediumMarginBegin">
                        <Link press="onPress" text="Products"/>
                        <Link press="onPress" text="Suppliers"/>
                        <Link press="onPress" text="Titanium"/>
                        <Link press="onPress" text="Ultra portable"/>
                        <Link press="onPress" text="12 inch"/>
                        <Link press="onPress" text="Super portable deluxe"/>
                    </Breadcrumbs>
                </Toolbar>
            </customHeader>
            <subHeader>
                <Toolbar width="100%">
                <ToolbarSpacer />
                   <IconTabHeader mode="Inline">
                        <items>
                            <IconTabFilter key="info" text="Info" />
                            <IconTabFilter key="attachments" text="Attachments" count="3" />
                            <IconTabFilter key="notes" text="Notes" count="12" />
                            <IconTabFilter key="people" text="People"/>
                        </items>
                    </IconTabHeader>
                </Toolbar>
            </subHeader>
            <OverflowToolbar design="Transparent" >
            <OverflowToolbarToggleButton press="OverflowToolbarToggleButton" pressed="{treeModel>/showSideContent}" icon="sap-icon://bullet-text" class=""/>
            </OverflowToolbar>
