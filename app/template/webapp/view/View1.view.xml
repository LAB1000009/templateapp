<mvc:View controllerName="ui.template.controller.View1"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:semantic="sap.f.semantic"
	xmlns:u="sap.ui.unified"
	xmlns:dnd="sap.ui.core.dnd"
