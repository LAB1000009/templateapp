<mvc:View controllerName="ui.template.controller.View1"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:semantic="sap.f.semantic"
	xmlns:u="sap.ui.unified"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:smartTable="sap.ui.comp.smarttable"
	>
	<semantic:SemanticPage
		class="sapUiNoContentPadding"
		id="plannerSemanticPage"
        >
        <semantic:titleExpandedContent>
         <HBox width="100%" alignItems="Center" height="50px">
            <VBox width="50%">
                <HBox width="100%">
                    <Title text="{treeModel>/headerTitle}"/>
                </HBox>
                <Label text="{treeModel>/headerSubTitle}"/>
            </VBox>
            <HBox width="50%" justifyContent="SpaceBetween" alignItems="Center" renderType="Bare">
                
                    <Title text="{treeModel>/headerActDate}"/>
                    
                    <Title text="{treeModel>/headerCurrUser}"/>
                
                    <Image src="../logo/mosec_logo.png" height="50px"/>
                    <!-- <Title text="Icon"/> -->
            </HBox>
        </HBox>
        </semantic:titleExpandedContent>
        <Page showHeader="false">
            <footer>
                <OverflowToolbar>
                    <content>
                        <Title text="{treeModel>/footerCopyright}" class="sapUiMediumMarginBegin"/>
                        <ToolbarSpacer />
                        <Title text="{treeModel>/footerClass}"  titleStyle="H6" />
                        <ToolbarSpacer />
                        <Title text="{treeModel>/footerPO}" class="owerviewColorTitle" titleStyle="H6" />
                        <ToolbarSpacer />
                        <Title text="{treeModel>/footerDetails}" titleStyle="H6" class="sapUiMediumMarginEnd" />
                    </content>
                </OverflowToolbar>
            </footer>
        </Page>
	</semantic:SemanticPage>
</mvc:View>