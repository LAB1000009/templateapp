<mvc:View controllerName="ui.template.controller.View1"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:semantic="sap.f.semantic"
	xmlns:u="sap.ui.unified"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:smartTable="sap.ui.comp.smarttable"
	>
    <VBox renderType="Bare" fitContainer="true">
        <HBox class="sapUiContentPadding">
            <HBox width="100%" alignItems="Center" height="50px">
                <VBox width="50%">
                    <HBox width="100%">
                        <Title text="{treeModel>/headerTitle}"/>
                    </HBox>
                    <Label text="{treeModel>/headerSubTitle}"/>
                </VBox>
                <HBox width="50%" justifyContent="SpaceBetween" alignItems="Center" renderType="Bare">
                    
                        <Title text="{treeModel>/headerActDate}"/>
                        
                        <Title text="{treeModel>/headerCurrUser}"/>
                    
                        <Image src="../logo/mosec_logo.png" height="50px" class="sapUiTinyMarginEnd"/>
                        
                </HBox>
            </HBox>
            </HBox>
            <Page
                class="sapUiNoContentPadding"
                id="plannerSemanticPage" showHeader="false" enableScrolling="false">
                <Page id="contentPage" showHeader="true"  enableScrolling="false">
                    <customHeader>
                        <Toolbar width="100%" class="sapUiNoContentPadding">
                            <Breadcrumbs currentLocationText="Laptop" separatorStyle="{/selected}" class="sapUiTinyMarginTop">
                                <Link press="onPress" text="Products"/>
                                <Link press="onPress" text="Suppliers"/>
                                <Link press="onPress" text="Titanium"/>
                                <Link press="onPress" text="Ultra portable"/>
                                <Link press="onPress" text="12 inch"/>
                                <Link press="onPress" text="Super portable deluxe"/>
                            </Breadcrumbs>
                        </Toolbar>
                    </customHeader>
                    <subHeader>
                        <OverflowToolbar width="100%">
                            <OverflowToolbarToggleButton press="OverflowToolbarToggleButton" pressed="{treeModel>/showSideContent}" icon="sap-icon://bullet-text" />
                        <ToolbarSpacer />
                        <IconTabHeader mode="Inline">
                                <items>
                                    <IconTabFilter key="info" text="Info" />
                                    <IconTabFilter key="attachments" text="Attachments" count="3" />
                                    <IconTabFilter key="notes" text="Notes" count="12" />
                                    <IconTabFilter key="people" text="People"/>
                                </items>
                            </IconTabHeader>
                        </OverflowToolbar>
                    </subHeader>
                    <!-- <OverflowToolbar design="Transparent" class="sapUiNoContentPadding">
                    <OverflowToolbarToggleButton press="OverflowToolbarToggleButton" pressed="{treeModel>/showSideContent}" icon="sap-icon://bullet-text" />
                    </OverflowToolbar> -->
                    </Page>
                </Page>
            <OverflowToolbar>
                <content>
                    <Title text="{treeModel>/footerCopyright}" class="sapUiTinyMarginBegin"/>
                    <ToolbarSpacer />
                    <Title text="{treeModel>/footerClass}"  titleStyle="H6" />
                    <ToolbarSpacer />
                    <Title text="{treeModel>/footerPO}" class="owerviewColorTitle" titleStyle="H6" />
                    <ToolbarSpacer />
                    <Link text="{treeModel>/footerDetails}" press="onPressFooterBtn" titleStyle="H6" class="sapUiTinyMarginEnd" />
                </content>
            </OverflowToolbar>
    </VBox>  
</mvc:View>